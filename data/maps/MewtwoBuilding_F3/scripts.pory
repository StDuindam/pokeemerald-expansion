        waitmessage
        release
    }
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 6){
        msgbox(format("Good luck!"))
        waitmessage
        release
    }
    release

    msgbox(format("Are you ready for your next battle?"), MSGBOX_YESNO)
    if(var(VAR_RESULT) == YES){
        msgbox("Great, meet me in the arena.")
        special(HealPlayerParty)
        waitmessage
        call(EventScript_MoveToBattleAreaSequence)
    }else{
        msgbox(format("I will be here once you are ready"))
        waitmessage
    }
    release
}

script EventScript_MoveToBattleAreaSequence{
    lock
        applymovement(OBJ_EVENT_ID_PLAYER, Movement_MewtwoIsland_WalkToArenaPlayerP1)
        waitmovement(0)
        warpdoor(MAP_MEWTWO_BUILDING_F2,0)
    releaseall
}

movement Movement_MewtwoIsland_WalkToArenaPlayerP1 {
    walk_down * 2
}

movement Movement_MewtwoIsland_WalkToArenaPlayerP2 {
    walk_down * 1
    walk_right * 6
    face_up
}