        release
    }
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 2){
        msgbox(format("My master is delighted with your participation."))
        waitmessage
        release
    }
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 3){
        msgbox(format("The last battle must have been hard."))
        waitmessage
        release
    }
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 4){
        msgbox(format("Best of luck participant."))
        waitmessage
        release
    }
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 5){
