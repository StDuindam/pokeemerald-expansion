script EventScript_MewtwoBF3_NurseJoy{
    lock
    faceplayer
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 0){
        msgbox(format("Your first battle is up."))
        waitmessage
        release
    }
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 1){
