script EventScript_MewtwoBF3_Birch{
lock
    faceplayer
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 0){
        msgbox(format("Prof BIRCH: Discovering an Island, beating team rocket and now this? You sure get in to a lot of adventures {PLAYER}."))
        waitmessage
        release
    }
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 1){
        msgbox(format("Prof BIRCH: Great showing out there Champ!"))
        waitmessage
        release
    }
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 2){
        msgbox(format("Prof BIRCH: Are you still doing good? You can take a break you know."))
        waitmessage
        release
    }
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 3){
        msgbox(format("Prof BIRCH: Keep this momentum up!"))
        waitmessage
        release
    }
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 4){
        msgbox(format("Prof BIRCH: This battling is impressive, I hope we can calm Mewtwo down enough so he can understand just how much we love Pokemon!"))
        waitmessage
        release
    }
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 5){
        msgbox(format("Prof BIRCH: The battles get more and more challenging, but that won't stop you!"))
        waitmessage
        release
    }
    if(var(VAR_MEWTWO_TOURNEY_STATE) == 6){
        msgbox(format("Prof BIRCH: This is it {PLAYER}."))
        waitmessage
        release
    }
    release
}

