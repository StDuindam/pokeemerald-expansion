mapscripts RocketHideout_F1_MapScripts {
    
    MAP_SCRIPT_ON_LOAD: EventScript_OnTransition_RocketHideoutF1
    MAP_SCRIPT_ON_TRANSITION EventScript_OnTransition_RocketHideoutF1
}

script EventScript_OnTransition_RocketHideoutF1{ 
    if(var(VAR_ROCKET_ARC_STATE) != 7)
    {        
        setflag(FLAG_MATSROCKETHIDEOUT_VISIBLE)
    }else{
        clearflag(FLAG_MATSROCKETHIDEOUT_VISIBLE)
    }
    if(var(VAR_ROCKET_ARC_STATE) == 8){
        clearflag(FLAG_NOTINROCKETSTATE_8)
    }else{
        setflag(FLAG_NOTINROCKETSTATE_8)
    }
}

script EventScript_RocketOne_RocketHideout{
    trainerbattle_single(TRAINER_ROCKETF_ONE_ROCKETHIDEOUTF1, PreBattle_TextOne_RocketHideoutF1, PostBattle_TextOne_RocketHideoutF1, EventScript_RocketOne_PostBattle_RocketHideOutF1)
