    release
}

script IncreaseGymsBeatVar{
    lock
    if(var(VAR_ROCKET_GYMS_BEAT) < 8){
        setvar(VAR_ROCKET_GYMS_BEAT, 1)
        msgbox("INCREASED VAR")
        waitmessage
        if(var(VAR_ROCKET_GYMS_BEAT) == 8){
            msgbox("8 now!")
            waitmessage
        }
    }else{
        msgbox("Completed")
        waitmessage
    }
    waitmessage
    release
}

script CheckIfBeatAllGyms{
    special(CheckIfRocketGymLeadersDefeated)
    lock
    msgbox("CHECKING")
    waitmessage
    if(flag(FLAG_ROCKET_ALLGYMS_BEAT)){
        msgbox("Beat")
        waitmessage
    }else{
        msgbox("Not beat")
        waitmessage
    }
    release
}

